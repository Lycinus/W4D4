<h1> Input a new album! </h1>

<form action="<%= albums_url %>" method="post">
    <%= auth_token %>
    <input type="text" name=album[title] value="Name"> <br><br>
    <select name="album[band_id]">
        <% @bands.each do |band| %>
            <option value="<%= band.id %>"><%= band.name %></option>
        <% end %>
    </select>
    
    <br><br>
   
    <input type="text" name=album[year] value="Year">
    
    <br><br>
    
    <label>Studio
    <input type="radio" id="studio-album"name=album[is_live?] value="false" checked>
    </label>
    <label>Live
    <input type="radio" name=album[is_live?] value="true">
    </label>
    
    <br><br>
    <input type="submit" value="Create Album">
</form>
