<h1> Edit an album! </h1>

<form action="<%= album_url(@album) %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <%= auth_token %>
    <input type="text" name=album[title] value="<%= @album.title%>"> <br><br>
    <input type="text" name=album[year] value="<%= @album.year%>"> <br><br>
    
    <label>Studio
    <input 
        type="radio"
        id="studio-album" 
        name="album[is_live?]"
        value="<%= @album.is_live? %>"
        <%= @album.is_live? ? "" : "checked" %>>
    </label>
    <label>Live
    <input 
        type="radio" 
        name="album[is_live?]"
        value="<%= @album.is_live? %>" 
        <%= @album.is_live? ? "checked" : "" %>>
    </label>
    
    <br><br>
    <input type="submit" value="Edit Album">
</form>

